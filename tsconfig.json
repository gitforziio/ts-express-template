{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",

    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@lib/*": ["lib/*"]
    }

  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": ["node_modules"]
}
